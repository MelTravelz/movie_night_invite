<h3>Discover Movies</h3>
<br>
<%= button_to "Find Top Rated Movies", "/users/#{@user.id}/movies", method: :get %>
<br>
  <%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
      <%= f.label :search, "Movie Title:" %>
      <%= f.text_field :search, placeholder: "search" %> 
      <%= f.submit "Search by Movie Title" %> 
  <% end %>


